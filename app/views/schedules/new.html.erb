<%= javascript_include_tag 'schedule_setting' %>

<div class="schedule-setting-container">
  <h1 class="page-title">スケジュール設定</h1>

  <div class="schedule-setting-form">
    <form id="scheduleForm">
      <div class="form-group">
        <label for="scheduleTitle">タイトル</label>
        <input type="text" id="scheduleTitle" name="title" placeholder="タイトルを入力">
      </div>

      <div class="form-group date-time-group">
        <div class="date-wrapper">
          <label for="scheduleDate">日付</label>
          <input type="date" id="scheduleDate" name="date">
        </div>

        <div class="time-wrapper">
          <div>
            <label for="scheduleStartTime">開始時間</label>
            <select id="scheduleStartTime" name="start_time">
              <option value="">選択してください</option>
            </select>
          </div>

          <span class="time-separator">～</span>

          <div>
            <label for="scheduleEndTime">終了時間</label>
            <select id="scheduleEndTime" name="end_time">
              <option value="">選択してください</option>
            </select>
          </div>
        </div>
      </div>


      <div class="form-group">
        <label for="scheduleDescription">詳細</label>
        <textarea id="scheduleDescription" name="description" placeholder="詳細を入力"></textarea>
      </div>

      <div class="form-group">
        <label for="scheduleVisibility">公開設定</label>
        <select id="scheduleVisibility" name="visibility">
          <option value="public">公開</option>
          <option value="private">非公開</option>
        </select>
      </div>

      <div class="form-actions">
        <button type="submit" class="submit-btn">保存</button>
        <button type="reset" class="reset-btn">リセット</button>
      </div>
    </form>
  </div>
</div>

