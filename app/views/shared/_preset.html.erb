<!-- Presets Container Section -->
<div class="presets-container">
  <div class="presets-left_block">
    <div class="presets-left_header">
      <h2 id="preset-name"></h2>
      <button id="create-schedule-btn" style="display:none;">予定作成</button>
      <button id="delete-preset-btn" type="button" style="display: none;">削除</button>
    </div>
    <!-- 予定作成モーダル -->
    <div id="schedule-modal" class="modal">
      <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <h2>予定を作成</h2>
        <form id="schedule-form">
          <label for="schedule-title">タイトル:</label>
          <input type="text" id="schedule-title" placeholder="タイトルを入力" required />

          <label for="start-time">開始時間:</label>
          <select id="start-time" required></select>

          <label for="end-time">終了時間:</label>
          <select id="end-time" required></select>

          <button type="submit">予定を保存</button>
          <button type="button" onclick="closeModal()">キャンセル</button>
        </form>
      </div>
    </div>
    <div class="preset-event-container">
      <!-- 午前の予定（左側） -->
      <div class="preset-event-left">
        <h3>午前の予定</h3>
        <div class="preset-event-morning"></div>
      </div>

      <!-- 午後の予定（右側） -->
      <div class="preset-event-right">
        <h3>午後の予定</h3>
        <div class="preset-event-afternoon"></div>
      </div>
    </div>
  </div>

  <div class="presets-right_block">
    <!-- プリセット操作の右側部分 -->
    <div class="presets-right_header">
      <button id="new-preset-btn">プリセットを作成</button>
    </div>
    <div id="preset-modal" class="modal">
      <div class="modal-content">
        <span id="close-modal" class="close">&times;</span>
        <h2>新しいプリセットを作成</h2>
        <form id="preset-form">
          <label for="preset-name-input">プリセット名</label>
          <input type="text" id="preset-name-input" name="preset[name]" required>
          <button type="submit">作成</button>
          <button type="button" id="cancel-btn">キャンセル</button>
        </form>
      </div>
    </div>
    <h2>保存されたプリセット</h2>
    <ul class="preset-list" id="preset-list">
      <% if @presets.any? %>
        <% @presets.each do |preset| %>
          <li class="preset-item" data-id="<%= preset.id %>">
            <%= preset.name %>
          </li>
        <% end %>
      <% else%>
        <p>プリセットがありません。</p>
      <% end %>
    </ul>
  </div>
</div>

<!-- ✅ 右クリックメニュー -->
<div id="context-menu" class="context-menu">
  <ul>
    <li id="edit-event">編集</li>
    <li id="delete-event">削除</li>
  </ul>
</div>
