<div class="sidebar schedule-sidebar">
  <h1 class="logo rainbow-text">Timora</h1>

  <div class="mini-calendar">
    <div id="mini-calendar"></div>  <!-- ✅ ここがあるか確認 -->
  </div>

  <div class="sidebar-item">
    <button class="sidebar-btn" id="show-posts" >
      <i class="fas fa-home"></i>
      <span>ホーム</span>
    </button>
  </div>

  <div class="sidebar-item">
    <button class="sidebar-btn" id="show-calendar" >
      <i class="fas fa-calendar"></i>
      <span>カレンダー</span>
    </button>
  </div>

  <div class="sidebar-item">
    <button class="sidebar-btn" id="show-presets" >
      <i class="fas fa-preset"></i>
      <span>プリセット</span>
    </button>
  </div>

  <div class="sidebar-item">
    <button class="sidebar-btn" id="show-memo" >
      <i class="fas fa-memo"></i>
      <span>メモ</span>
    </button>
  </div>

  <div class="profile-view">
    <div class="profile-info">
      <%= image_tag(
        current_user.profile_picture.attached? ? current_user.profile_picture : 'default_profile.png',
        alt: "プロフィール画像",
        class: "profile-icon updatable-picture"
      ) %>
      <p class="nickname"><%= current_user.nickname %></p>
    </div>
    <ul class='lists-right'>
      <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></li>
    </ul>
  </div>
</div>