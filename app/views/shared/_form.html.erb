<div class="event-setting-container">
  <h1 class="page-title">イベント作成</h1>

  <div class="event-setting-form">
    <div class="form-group">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title, placeholder: "タイトルを入力" %>
    </div>

    <div class="form-group date-time-group">
      <div class="date-wrapper">
        <%= form.label :date, "日付" %>
        <%= form.date_field :date %>
      </div>

      <div class="time-wrapper">
        <div>
          <%= form.label :start_time, "開始時間" %>
          <%= form.select :start_time, options_for_select((0..23).to_a.product(["00", "15", "30", "45"]).map { |h, m| ["#{format('%02d', h)}:#{m}", "#{format('%02d', h)}:#{m}"] }), {}, class: "form-control" %>
        </div>

        <span class="time-separator">～</span>

        <div>
          <%= form.label :end_time, "終了時間" %>
          <%= form.select :end_time, options_for_select((0..23).to_a.product(["00", "15", "30", "45"]).map { |h, m| ["#{format('%02d', h)}:#{m}", "#{format('%02d', h)}:#{m}"] }), {}, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, "詳細" %>
      <%= form.text_area :description, placeholder: "詳細を入力" %>
    </div>

    <div class="form-actions">
      <%= form.submit "保存", class: "submit-btn" %>
      <%= form.submit "リセット", class: "reset-btn", type: "reset" %>
    </div>
  </div>
</div>
