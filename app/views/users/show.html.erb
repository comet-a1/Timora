<% provide :title, @user.nickname %>

<%= render 'shared/profile', user: @user %>

<div class="user-posts">
  <h2><%= @user.nickname %> さんの投稿</h2>

  <% if @user.posts.any? %>
    <div class="post-list">
      <% @user.posts.order(created_at: :desc).each do |post| %>
        <%= render partial: 'posts/post', locals: { post: post } %>
      <% end %>
    </div>
  <% else %>
    <p>まだ投稿がありません。</p>
  <% end %>
</div>